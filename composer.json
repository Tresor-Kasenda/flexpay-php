{
    "name": "tresor-kasenda/flexpay-php",
    "description": "A geteway for mobile money and visa card payments using flexpay",
    "license": "MIT",
    "type": "library",
    "require": {
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "Tresor\\Flexpay\\": "src/"
        }
    },
    "authors": [
        {
            "name": "tresor kasenda",
            "email": "tresorkasendat@gmail.com",
            "homepage": "https://tresorkasenda.tech"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
